.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        = render partial: 'layouts/partials/modal_form',
                   locals: {trigger_label: t('activerecord.form.add_trigger'),
                            trigger_value: '+',
                            modal_id: 'run-form-modal',
                            content_partial: 'runs/partials/run_form'}
      .panel-body
        %table{id: 'runs-table', class: 'table table-striped table-bordered table-hover table-responsive', width: '100%'}
          %thead
            %tr
              %th= t 'activerecord.attributes.date'
              %th= t 'activerecord.attributes.duration'
              %th= t 'activerecord.attributes.distance'
              %th.no-sort= t 'button.delete'
          %tbody
            = render @runs
