.container
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Please Sign In

        .panel-body
          = form_for(resource, as: resource_name, url: session_path(resource_name), role:'form') do |f|
            .form-group
              = f.label :email
              %br
              = f.email_field :email, class:'form-control', autofocus: true

            .form-group
              = f.label :password
              %br
              = f.password_field :password, class:'form-control',  autocomplete: "off"

            - if devise_mapping.rememberable?
              .form-group
                = f.check_box :remember_me
                = f.label :remember_me

            = f.submit t('devise.sessions.log_in'), class: 'btn btn-lg btn-success btn-block'

          = render "devise/shared/links"
