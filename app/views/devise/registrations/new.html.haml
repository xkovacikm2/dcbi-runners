.container
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title= t 'devise.registrations.sign_up_title'

        .panel-body
          = form_for(resource, role: 'form', as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!

            .form-group
              = f.label :email
              %br
              = f.email_field :email, class: 'form-control', autofocus: true

            .form-group
              = f.label :password
              - if @minimum_password_length
                %em= "#{@minimum_password_length} characters minimum"
              %br
              = f.password_field :password, class: 'form-control', autocomplete: "off"

            .form-group
              = f.label :password_confirmation
              %br
              = f.password_field :password_confirmation, class: 'form-control', autocomplete: "off"

            = f.submit t('devise.registrations.sign_up_btn'), class: "btn btn-lg btn-success btn-block"

          = render "devise/shared/links"
